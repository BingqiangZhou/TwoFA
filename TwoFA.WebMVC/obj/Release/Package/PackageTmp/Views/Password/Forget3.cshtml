@model ForgetPasswordConfirmModel
@{
    ViewBag.Title = "重置密码";
    Layout = "~/Views/Shared/_LayoutHomeOperator.cshtml";
}

<style>
    .login-info {
        margin: 20px 0;
    }
</style>

@using (Html.BeginForm("ForgetAndConfirmPassword", "Password"))
{
    @Html.AntiForgeryToken()//避免CSRF攻击
    <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">重置密码</h1>
        <p>请输入两次新密码</p>
    </div>
    <div class="col-lg-4 offset-lg-4">
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Token)
        <div class="login-info">
            <div class="form-label-group">
                @Html.DisplayNameFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="login-info">
            <div class="form-label-group">
                @Html.DisplayNameFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
        </div>
        <button class="btn btn-lg  btn-primary btn-block" style="margin-top:20px;" type="submit">保存</button>
        <div class="text-center">
            @Html.ActionLink("返回首页", "Index", "Home")
        </div>
    </div>
}
