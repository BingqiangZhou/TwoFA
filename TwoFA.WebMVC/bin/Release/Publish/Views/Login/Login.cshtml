@model LoginModel
@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_LayoutHomeOperator.cshtml";
}
<style>
    .login-info {
        margin-top: 20px;
    }
</style>
@using (Html.BeginForm("Login", "Login"))
{
    @Html.AntiForgeryToken()//避免CSRF攻击
    <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">登录</h1>
        <p>请输入以下信息</p>
    </div>
    <div class="col-lg-4 offset-lg-4">
        <div class="login-info">
            <div class="form-label-group">
                @Html.DisplayNameFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="login-info">
            <div class="form-label-group">
                @Html.DisplayNameFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
            <div class="text-center">
                @Html.ActionLink("注册账号", "Step1", "Register", null,new { @class = "col-4 float-left" })
                @Html.ActionLink("忘记密码", "Forget", "Password",null, new { @class = "col-4 float-right" })
            </div>
            <div style="clear:both;"></div>
            <button class="btn btn-lg  btn-primary btn-block" style="margin-top:20px;" type="submit">登录</button>
        </div>
        }


